<h1>Cookie form!!!!</h1>

<!--
  interesting... where do we want to send this to?
  post is the default method of submitting a form
  this will come back in mod 3....
 -->
<form action="/create_cookies" method="post">
  <label for="kind">Kind of Cookie:</label>
  <input type="text" name="cooky[kind]" id="kind">
  <br/>
  <label for="size">Size of Cookie:</label>
  <input type="text" name="cooky[size]" id="size">
  <br/>
  <label for="">Cook Time:</label>
  <input type="text" name="cooky[cook_time]">
  <br/>
  <!-- wait... how do i know which jar_id to enter? -->
  <label for="">Jar:</label>
  <!-- <input type="number" name="cooky[jar_id]"> -->
  <!-- something that shows the name -->
  <select name="cooky[jar_id]">
    <!-- statically... dynamitcally -->
    <!-- metaphycaklly... should i use Jar.all hjere? -->
    <% @jar_time.each do |jar| %>
      <%# what things from the jar do i need? a lot of choices %>
      <option value="<%= jar.id %>"><%= jar.color %></option>
    <% end %>
  </select>
  <br/>
  <input type="submit" value="Cookie time!">
</form>
